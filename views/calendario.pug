								.collapse(id='cale{{x1.lugar}}')
									p.text-primary Nombre:{{x1.orden}}
									p.text-primary Estado:{{x1.estado}}  
									p.text-primary Fecha:{{x1.fecha}} 
									p.text-primary Tipo:{{x1.tipo}}
