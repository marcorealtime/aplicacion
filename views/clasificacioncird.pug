doctype html
html(ng-app='sampleAppCird')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title CIRCUITO-BOLIVIA
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.7/cosmo/bootstrap.min.css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700')
		link(rel='stylesheet', href='/stylesheets/styles.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		nav.navbar.navbar-default
			.container
				.navbar-header
					a.navbar-brand.navbar-link(href='#')
						h3.tipografia3 CIRCUITO-BOLIVIA
					button.navbar-toggle.collapsed(data-toggle='collapse', data-target='#navcol-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
				#navcol-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li(role='presentation')
							a(href='/') INICIO
						li(role='presentation')
							a(href='/piloto') PILOTOS
						li(role='presentation')
							a(href='/ranking') RANKING
						li(role='presentation')
							a(href='/calendario') CALENDARIO
						li.active(role='presentation')
							a.dropdown-toggle(data-toggle='dropdown', href='#')
								| DIRECTO
								span.caret
							ul.dropdown-menu
								li(role='presentation')
									a(href='/inscritos') INSCRITOS
								li(role='presentation')
									a(href='/clasificacioncir') CLASIFICACIÓN
								li(role='presentation')
									a(href='/carreracir') CARRERA
		.container
			.row(ng-controller='SampleCtrlCird')
				.col-md-4.col-md-push-7.phone-preview
					.iphone-mockup
				.col-md-6.col-md-pull-3.get-it
					h4.tipografia2 CLASIFICACIÓN : #{carrera}
					h4.tipografia2 CLASES:
					select(name='singleSelect', ng-model='data.singleSelect', ng-change='LoadSessionData(data.singleSelect)', style='width:100%')
						option(value='', disabled='', selected='', class='timpografia2') Seleccionar CLASE
						option(ng-repeat='x1 in etapas') {{x1.nombre}}
					hr
					.panel.panel-default(ng-repeat='x1 in unitscorriendo')
						.panel-heading(style="background-color: #{{x1.color}};")
							h3.panel-title
								h5.tipografia1 {{unitscorriendo.indexOf(x1)+1}}
									p.pull-right {{x1.clase}}
								h5.tipografia1 
									span.icon-key2
									| {{x1.auto}} 
								h5.tipografia1
									span.icon-user
									| {{x1.nombre}}
								h5.tipografia1
									span.icon-user-plus
									| {{x1.nave}}
								center
									h2  
										#reloj
											| {{x1.tiempo}}
								#reloj2
									p.pull-right +{{x1.tiempoa}}
								br
								h5.tipografia1 Pena :{{x1.pena}}
								h5.tipografia1 REP: {{x1.repe}}
						.panel-body
							a.btn.btn-primary.btn-xs(href='#cor{{unitscorriendo.indexOf(x1)+1}}', data-toggle='collapse' style='width:100%') INFO
							.collapse(id='cor{{unitscorriendo.indexOf(x1)+1}}')
								br
								#reloj3
									p Velocidad:  {{x1.km}} km/h       
									p Dif. C/u:  {{x1.tiempoa}}
									p Dif 1° C/u:  {{x1.tiempop}}
					
		section.testimonials
		footer.site-footer
			.container
				.row
					.col-sm-6
						h6.tipografia4 @CIRCUITO-TARIJA 2017 TODOS LOS DERECHOS RESERVADOS
